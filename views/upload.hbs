<!DOCTYPE html>
  <html>
    <head>
      <!--Import Google Icon Font-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
      <script type='text/javascript' src='/javascripts/functions.js'></script>
      <script type='text/javascript' src='/javascripts/upload.js'></script>
      <link rel="stylesheet" href="/stylesheets/upload.css">
    </head>

    <body>

      <nav>
        <div class="nav-wrapper teal">
          <a href="#" class="brand-logo">Our Quirky Adventure</a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a href="/memory">Memory</a></li>
            <li><a href="/gallery">Gallery</a></li>
            <li><a href="/upload">Upload</a></li>
            <li><a href="/logout">Logout</a></li>
          </ul>
        </div>
      </nav>

       <div class="container">
        <div class="row">
          <form action="" method="post" encType="multipart/form-data" ref='uploadForm' id='uploadForm' >
            <input id="tokenHolder" type="hidden" value="{{ token  }}">
            <div class="file-field input-field">
              <div class="btn">
                <span>File</span>
                <input type="file" multiple name="memoryUpload" id="memoryUpload">
              </div>
              <div class="file-path-wrapper">
                <input class="file-path validate" type="text" placeholder="Upload one or more files">
              </div>
            </div>

            <div id="previewContainer" class="row"></div>

            <div class="progress">
                  <div class="indeterminate"></div>
            </div>

            <button class="btn waves-effect waves-light center-align" type="submit" name="action">
              Upload <i class="material-icons right">send</i>
            </button>
          </form>
        </div>
       </div>

      <!-- Form Template-->
      <div id="infoContainer">
         <div class="row">
           <div class="col m4 offset-m4 s12">
            <form class="">
              <div class="row">
                <div class="input-field col s12">
                  <textarea id="infoTitle" name="infoTitle" class="materialize-textarea" placeholder="  "></textarea>
                  <label for="infoTitle">Title</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <textarea id="infoNote" name="infoNote" class="materialize-textarea" placeholder="  "></textarea>
                  <label for="textarea1" for="infoNote">Note</label>
                </div>
              </div>
              <input type="hidden" id="infoSeq">
              <a class="waves-effect waves-light btn right" id="infoSubmit" >Save</a>
            </form>
           </div>
        </div>
      </div>

      <!--JavaScript at end of body for optimized loading-->
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    </body>
  </html>


<!DOCTYPE html>
  <html>
    <head>
      <!--Import Google Icon Font-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
      <link rel="stylesheet" href="/stylesheets/memoryEdit.css">
    </head>

    <body>
      <nav>
        <div class="nav-wrapper teal">
          <a href="#" class="brand-logo">Our Quirky Adventure</a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a href="/memory">Memory</a></li>
            <li><a href="/gallery">Gallery</a></li>
            <li><a href="/upload">Upload</a></li>
            <li><a href="/logout">Logout</a></li>
          </ul>
        </div>
      </nav>
       <div class="container">
         <div class="row">
           <div class="col m4 offset-m4 s12 imgContainer">
             <img class="responsive-img" src="{{ data.link  }}">
            <form class="" method="post" action="">
              <div class="row">
                <div class="input-field col s12">
                  <textarea id="infoTitle" name="infoTitle" class="materialize-textarea" placeholder="  ">{{ data.title  }}</textarea>
                  <label for="infoTitle">Title</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <textarea id="infoNote" name="infoNote" class="materialize-textarea" placeholder="  ">{{ data.note }}</textarea>
                  <label for="textarea1" for="infoNote">Note</label>
                </div>
              </div>
              <button class="btn waves-effect waves-light right" id="infoSubmit" type="submit" value="Update" name="infoSubmit">Save
                <i class="material-icons right">send</i>
              </button>
              <button class="btn waves-effect waves-light right red infoDelete" id="infoSubmit" type="submit" value="Delete" name="infoSubmit">Delete
              </button>
            </form>
           </div>
        </div>
       </div>

      <!--JavaScript at end of body for optimized loading-->
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
      <script type='text/javascript' src='/javascripts/memoryEdit.js'></script>
    </body>
  </html>
